{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug",
            "type": "shell",
            "command": [
                "qmake CONFIG+=debug -o build/ &&",
                "make --directory build -j4 &&",
                "mv build/src/qbittorrent-nox src/"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },{
            "label": "make",
            "type": "shell",
            "command": [
                "qmake -o build/ &&",
                "make --directory build -j4 &&",
                "mv build/src/qbittorrent-nox src/"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "transfer to remote host",
            "type": "shell",
            "command": "scp -P 2222 ${workspaceFolder}/src/qbittorrent-nox dd@127.0.0.1:~",
            "problemMatcher": []
        }
    ]
}