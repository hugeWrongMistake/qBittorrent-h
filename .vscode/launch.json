    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 管道启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "~/qbittorrent-nox",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/home/dd",
            "environment": [],
            "externalConsole": true,
            "pipeTransport": {
                "debuggerPath": " stdbuf -i0 -o0 -e0 /usr/bin/gdb",
                "pipeProgram": "/usr/bin/ssh",
                "pipeArgs": [
                    "-ldd",
                    "-p2222",
                    "127.0.0.1"
                ],
                "pipeCwd": ""
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/qbittorrent-nox",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make debug"
        }
    ]
}